<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/activity_horizontal"
    android:backgroundTint="@color/coloronSecondary"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal"
            android:layout_marginStart="@dimen/activity_horizontal"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:layout_below="@id/tv_item_Registration"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_photo_camera_black_24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/status_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            >

            <TextView
                android:id="@+id/tv_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_status"
                android:layout_margin="4dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_toEndOf="@id/img_card"
            android:layout_marginEnd="@dimen/activity_horizontal"
            android:text="@string/tv_registration"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

       <!-- <TextView
            android:id="@id/tv_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_desc"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/img_card"
            android:maxLines="2"
            android:layout_toStartOf="@id/status_card"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/tv_item_Registration"/>-->

        <TextView
            android:id="@+id/tv_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_card"
            android:layout_marginStart="@dimen/activity_horizontal"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:text="@string/tv_detail"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/status_card"
            android:layout_toEndOf="@id/img_card"
            android:layout_marginTop="@dimen/activity_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/tv_item_name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
